<UserControl x:Class="Galadarbs_IT23033.MVVM.View.CompDiagnosticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galadarbs_IT23033.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Cache Viewer" FontSize="20" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" Name="CacheDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cache Type" Binding="{Binding CacheType}" Width="*"/>
                <DataGridTextColumn Header="Size (MB)" Binding="{Binding Size}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Clear" Command="{Binding ClearCommand}" CommandParameter="{Binding CacheType}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Button Content="Refresh" Grid.Row="2" Width="100" HorizontalAlignment="Center"
                 Margin="0,10,0,0"/>
    </Grid>
</UserControl>
