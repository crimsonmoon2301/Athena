<UserControl x:Class="Galadarbs_IT23033.MVVM.View.MaintainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galadarbs_IT23033.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid>
        <UniformGrid Columns="2" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Height="150">
            <Button Style="{StaticResource RoundButtonV}"
                    Content="Computer diagnostics"
                    Margin="10"
                    Command="{Binding DataContext.CompDiagnosticViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>

            <Button Style="{StaticResource RoundButtonO}"
                    Content="System Modifications"
                    Margin="10"
                    Command="{Binding DataContext.OSModCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    />
        </UniformGrid>
    </UniformGrid>
</UserControl>
