<UserControl x:Class="Galadarbs_IT23033.MVVM.View.DownloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galadarbs_IT23033.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <!-- Available Options ListBox with Advanced Options below it -->
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBlock Text="Available Options:" Foreground="White" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="14"/>
            <ListBox Name="AvailableListBox" Width="300" Height="340"/>
            <Button Content="Download selected build" Click="DownloadButton_Click" Margin="5" FontSize="14"/>
        </StackPanel>
        
    </Grid>
</UserControl>
